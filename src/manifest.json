{
  "name": "VScreenshot Assistant",
  "description": "VScreenshot Assistant",
  "version": "1.0",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "storage",
    "unlimitedStorage"
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "VScreenshot Assistant"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.youtube.com/*"
      ],
      "js": [
        "js/contents-youtube.js"
      ]
    },
    {
      "matches": [
        "https://twitter.com/intent/tweet*"
      ],
      "js": [
        "js/contents-twitter.js"
      ]
    },
    {
      "matches": [
        "https://*.spwn.jp/*"
      ],
      "js": [
        "js/contents-spwn.js"
      ]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    "js/inject-twitter.js"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'; worker-src 'self' data:",
  "default_locale": "ja"
}